{
  "permissions": {
    "allow": [
      "Read(./**/*.md)",
      "Read(./**/*.json)",
      "Read(./**/*.ts)",
      "Read(./**/*.py)",
      "Bash(npm run test:*)",
      "Bash(npm run lint)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(npm install:*)"
    ],
    "deny": [
      "Bash(curl:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "model": "claude-3-7-sonnet",
  "env": {
    "MAX_MCP_OUTPUT_TOKENS": "25000"
  }
}