{
  "mcpServers": {
    "metamcp-core": {
      "command": "docker",
      "args": [
        "run", "--rm", "-i",
        "-p", "3000:3000",
        "-v", "${PWD}/nyra-mcp-setup/configs:/configs",
        "-e", "CONFIG_FILE=/configs/metamcp-config.yaml",
        "-e", "PORT=core-services",
        "metatool-ai/metamcp:latest"
      ],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}",
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      }
    },
    
    "metamcp-heavy": {
      "command": "docker",
      "args": [
        "run", "--rm", "-i",
        "-p", "3001:3001",
        "-v", "${PWD}/nyra-mcp-setup/configs:/configs",
        "-e", "CONFIG_FILE=/configs/metamcp-config.yaml",
        "-e", "PORT=heavy-services",
        "metatool-ai/metamcp:latest"
      ],
      "disabled": true
    },
    
    "metamcp-dev": {
      "command": "docker",
      "args": [
        "run", "--rm", "-i",
        "-p", "3002:3002",
        "-v", "${PWD}/nyra-mcp-setup/configs:/configs",
        "-e", "CONFIG_FILE=/configs/metamcp-config.yaml",
        "-e", "PORT=dev-tools",
        "metatool-ai/metamcp:latest"
      ],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}",
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      }
    }
  }
}